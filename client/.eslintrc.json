{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "commonjs": true,
    "amd": true
  },

  // This maybe redundant with airbnb
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],

  "rules": {
    "comma-dangle": ["error", "always"],

    "array-bracket-spacing": 0,
    "no-alert": 0,
    "no-console": 0,

    // 1 - give warnings, 120 - characters per line, 2 - tab width
    "max-len": [1, 120, 2],
    "react-in-jsx-scope": 0
  },

  "globals": {
    "React": false,
    "ReactDOM": false,
  }
}
